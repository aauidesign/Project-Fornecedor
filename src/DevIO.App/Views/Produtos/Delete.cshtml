@model DevIO.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Excluir Produto";
}
<vc:summary></vc:summary>
<h3 class="text-danger alert-danger p-2 mt-5">Tem certeza que deseja Excluir este produto?</h3>
<div class="p-2">
    <div class="card-header mt-1 text-secondary mb-3  font-weight-bold">Dados do Produto</div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Imagem)
        </dt>
        <dd class="col-sm-10">
            <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style=" width:30%" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Model.Valor.ToString("C")
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @if (Model.Ativo == true)
            {
                <div class="shadow-sm" style="background-color:#4f794e; text-align:center; border-radius:25px; color:aliceblue; width:10%;">
                    <small>ATIVO</small>
                </div>
            }
            else
            {
                <div class="shadow-sm" style="background-color:#b25454; text-align:center; border-radius:25px; color:aliceblue; width:10%;">
                    <small>INATIVO</small>
                </div>
            }
        </dd>
        <dt class="col-sm-2">
            @if (Model.Fornecedor.Documento.Length == 11)
            {
                <h6>CPF</h6>
            }
            else
            {
                <h6>CNPJ</h6>
            }
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fornecedor.Documento)
        </dd>
    </dl>

    <form asp-action="Delete" class="card-footer">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a class="btn" href="javascript:window.history.back();">Voltar</a>
    </form>

</div>
