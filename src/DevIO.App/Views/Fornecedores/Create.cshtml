@model DevIO.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Novo Fornecedor";
}

<h1 class="text-center text-secondary">@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" class="text-uppercase text-muted">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="card-header mt-3 text-secondary mb-3  font-weight-bold">Dados Fornecedor</div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label "></label>
                <input asp-for="Nome" class="form-control" placeholder="Nome do Fornecedor" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Documento" class="control-label">CNPJ/CPF</label>
                <input asp-for="Documento" class="form-control" placeholder="CNPJ/CPF" />
                <span asp-validation-for="Documento" class="text-danger"></span>
                <small id="helpCep" class="text-muted alert-info">
                    Apenas números.
                </small>
            </div>
            <div class="form-group">
                <label asp-for="TipoFornecedor" class="control-label"></label> <br />
                <input type="radio" value="1" asp-for="TipoFornecedor" class="" checked /> Pessoa Física <br />
                <input type="radio" value="2" asp-for="TipoFornecedor" class="" /> Pessoa Jurídica
                <span asp-validation-for="TipoFornecedor" class="text-danger"></span>
            </div>

            <div class="custom-control custom-switch">
                <input type="checkbox" class="custom-control-input" id="customSwitch1" asp-for="Ativo" checked>
                <label class="custom-control-label" for="customSwitch1">@Html.DisplayNameFor(model => model.Ativo)</label>
            </div>


            <div class="card-header mt-3 text-secondary mb-3 font-weight-bold">Endereço</div>

            <partial name="_Endereco" />

            <div class="form-group card-footer">
                <button type="submit" value="Salvar" class="btn btn-success"><i class="fas fa-save text-white"></i>  Salvar</button>
                <a class="btn text-muted" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    BuscaCep();
</script>
}
