@model DevIO.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Excluir Fornecedor";
}
<vc:Summary></vc:Summary>
<h3 class="text-danger alert-danger p-2 mt-5">Tem certeza que deseja Excluir este Fornecedor?</h3>
<div class="p-2">
    <div class="card-header mt-3 text-secondary mb-3  font-weight-bold">Dados Fornecedor</div>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Documento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Documento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoFornecedor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoFornecedor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>

    <form asp-action="Delete" class="card-footer">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a class="btn" href="javascript:window.history.back();">Voltar</a>
    </form>

    <div class="card-header mt-3 text-secondary mb-3 font-weight-bold">Dados Endereço</div>

    <partial name="_DetalhesEndereco" />
</div>
